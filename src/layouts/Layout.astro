---
import "../styles/global.css";
const {title = "Denis Davydov"} = Astro.props

const socials = [
	{
		title: "linkedin",
		href: "/"
	},
	{
		title: "resume",
		href: "/",
	},
	{
		title: "ddavydov.dev@gmail.com",
		href: "/"
	}
]
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col justify-between pt-0 md:pt-8 p-8 dark:bg-zinc-950 bg-white text-gray-900 dark:text-zinc-200">
		<main class="mx-auto max-w-2xl py-4 md:pt-10 font-medium">
			<slot />
		</main>

		<footer class="mt-12 flex justify-center space-x-4">
			{socials.map(({href, title}) => <a href={href} class="text-gray-400 dark:text-gray-500 hover:text-blue-500 transition-colors duration-200" target="_blank">{title}</a>)}
		
		</footer>
	</body>
</html>
